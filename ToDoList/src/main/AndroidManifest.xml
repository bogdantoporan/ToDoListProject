<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.disertatie.todolist"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="16" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="To Do List"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.disertatie.todolist.MainActivity"
            android:label="To Do List" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.disertatie.todolist.AddRecord"
            android:label="Add new" >
        </activity>
       <activity android:name="com.disertatie.todolist.ViewRecord" android:label="Change existing" />
    </application>

</manifest>
